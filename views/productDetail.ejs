<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %> 
<body>
    <%- include('partials/header') %> 
    <div class="container">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                <img src="/images/<%= product.image[0] %>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <h5 class="card-title text-warning">% <%= product.discount %></h5>
                    <h5 class="card-title text-success">$ <%= (product.price - (product.price * product.discount / 100)) %></h5>
                    <p class="card-text"><%= product.description %> </p>
                </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>